<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">	<!-- TODO: a jarjar format would be better -->

	<id>sub-dependencies</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>*:metaworks2</include>
				<include>*:metaworks-dwr</include>
				<include>*:metaworks3</include>				
			</includes>
			
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>
	
</assembly>